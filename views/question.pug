doctype html 
html 
    head 
        meta(charset='utf-8')
        title Questions 
    body 
        form(action="/question",method="POST")
            label(for="userName") Enter Username
            input(id="userName",name="userName",type="text")
            label(for="userPass") Enter Password
            input(id="userPass",name="userPass",type="password")

            each item in questionText
                h2 
                    div #{item.question}
                each optionItem in optionText
                    if item.question_id === optionItem.question_id
                        input(id=optionItem.option, name=item.question,type="radio",value=optionItem.option)
                        label(for=optionItem.option) #{optionItem.option}
            br
            button(type="submit") Submit  


        
            
    